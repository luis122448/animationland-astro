const localStoreService = new LocalStorageService("score-game");
let maxScore: ScoreItem = localStoreService.obtenerMaximaPuntuacion();
localStoreService.obtenerPuntuacionesObservable().subscribe({
  next:data => {
    maxScore = data;
    // console.log(maxScore);
  },
});
